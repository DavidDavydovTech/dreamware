{
    "name": "pixi-typescript-boilerplate",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "liveServer": "npx live-server",
        "tscWatcher": "watchify --debug -p [ tsify ] ./src/main.ts -o index.js",
        "watch": "npx npm-run-all -p tscWatcher liveServer",
        "build": "npx browserify ./src/main.ts -p [ tsify ] > index.js && uglifyjs --output ./index.js  --compress --mangle -- ./index.js"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "pixi.js": "^5.0.3"
    },
    "devDependencies": {
        "browserify": "^16.2.3",
        "live-server": "^1.2.0",
        "npm-run-all": "^4.1.3",
        "run-script-os": "^1.0.3",
        "tsify": "^4.0.0",
        "typescript": "^3.1.6",
        "uglify-js": "^3.4.0",
        "watchify": "^3.11.0",
        "tsify": "^4.0.0",
        "uglify-js": "^3.4.0",
        "browserify": "^16.2.2"
    }
}
