{
    "name": "pixi-typescript-boilerplate",
    "version": "1.1.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "liveServer": "npx live-server ./dist",
        "typeCheck": "tsc --noEmit",
        "dev": "parcel ./src/index.html --open",
        "build": "npm run typeCheck & parcel build ./src/index.html",
        "pretty-check": "npx prettier -c ./src/**/*.ts",
        "lint-check": "npx eslint ./src/**/*.ts",
        "code-style-check": "npm run lint-check && npm run pretty-check",
        "format": "npx prettier --write src/**"
    },
    "author": "jkanchelov",
    "license": "MIT",
    "dependencies": {
        "@types/pixi.js": "^5.0.0",
        "assets": "^3.0.1",
        "pixi.js": "^5.2.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.10.0",
        "@typescript-eslint/parser": "^2.11.0",
        "del-cli": "^3.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.7.0",
        "live-server": "^1.2.0",
        "parcel-bundler": "^1.12.4",
        "prettier": "^1.19.1",
        "typescript": "^3.7.4"
    }
}
